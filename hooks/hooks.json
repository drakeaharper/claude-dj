{
  "hooks": {
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$PLUGIN_DIR/scripts/start-sound.sh\"",
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$PLUGIN_DIR/scripts/stop-sound.sh\""
          }
        ]
      }
    ]
  }
}
